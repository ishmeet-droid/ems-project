<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
<div style="background-color:#eef;padding:10px;display:flex;justify-content:space-between;align-items:center;">
    <div>
        <h3>${companyName}</h3>
        <p>${companyAddress}</p>
    </div>
    <div>
        <t:if test="showLogout">
            <t:pagelink page="Login" class="logout-link" t:event="logout">Logout</t:pagelink>
        </t:if>
    </div>
</div>
</html>
